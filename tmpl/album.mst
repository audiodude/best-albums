<div class="album">
  <div class="album-small">
    <img src="{{photo_url_sm}}">
  </div>
  <div class="album-large" style="display: none">
    {{#link}}<a href="{{link}}"><img src="{{photo_url_lg}}"></a>{{/link}}
    {{^link}}<img src="{{photo_url_lg}}">{{/link}}
    <p class="album-artist">{{artist}}</p>
    <p class="album-album">{{album}}</p>
    {{{html}}}
    <i class="fa fa-compress"></i>
  </div>
</div>